.barContainer {
	width: 100vw;
	/* height: 10vh; */
	position: fixed;
	background-color: #ffffff;
	bottom: 0;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	box-sizing: border-box;
	padding-top: 10rpx;
	padding-left: 48rpx;
	padding-right: 48rpx;
	padding-bottom: calc(12rpx + constant(safe-area-inset-bottom));
	padding-bottom: calc(12rpx + env(safe-area-inset-bottom));
	border-radius: 40rpx 40rpx 0 0;
	z-index: 9999;
}

.funcItem {
	width: 50px;
	height: 50px;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	font-size: 30rpx;
	font-weight: 400;
	position: relative;
}

.itemIcon {
	width: 56rpx;
	height: 56rpx;
}

.midItemIcon {
	width: 120rpx;
	height: 120rpx;
	position: absolute;
	transform: translateY(-50%) scale(1.5);
}