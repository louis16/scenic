.slide-wrap {
  position: absolute;
  width: 100vw;
  background-color: #F6F8FB;
  z-index: 100;
  border-radius: 48rpx 48rpx 0 0;
  padding-bottom: (122rpx +env(safe-area-inset-bottom));
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.08);
}

.expandBtn {
  left: 10px;
}

.s-close-btn {
  position: absolute;
  right: 10px;

}

.s-title-view {
  flex: 1;
  display: flex;
  flex-direction: row;
  font-family: 'PingFang SC Regular';
  font-size: 32rpx;
  font-weight: normal;
  line-height: 32rpx;
  color: #999999;
}

.slide-title {
  display: flex;
  justify-content: center;
  align-content: center;
  align-items: center;
  padding: 34rpx 32rpx;
  line-height: 32rpx;
  font-size: 32rpx;
  font-weight: 400;
  border-radius: 48rpx 48rpx 0 0;
  background: linear-gradient(180deg, #E5EFFF 0%, rgba(248, 251, 255, 0.64) 74%, rgba(255, 255, 255, 0.00) 100%);
}

.expand-slide-title::before {
  content: '  ';
  display: block;
  width: 60rpx;
  height: 10rpx;
  background-color: #999999;
  border-radius: 28rpx;
  position: absolute;
  top: 0;
  transform: translateY(-200%);
}

.dd {
  width: 96rpx;
  position: relative;
  z-index: 9;
}

.activeTitle {
  font-family: 'PingFang SC Bold';
  font-size: 40rpx;
  font-weight: 600;
  line-height: 40rpx;
  color: #333333;
  z-index: 99;
  position: relative;
}

.activeTitle view {
  position: relative;
  display: inline-block;
}

.activeTitle text {
  z-index: 1;
}

.activeTitle::before {
  z-index: 0;
  content: ' ';
  background: linear-gradient(0deg, #FFD7C5 0%, #FF9060 100%);
  position: absolute;
  display: inline-block;
  width: 96rpx;
  height: 16rpx;
  bottom: 0;
  transform: translate(-10%, 20%);
  border-radius: 12rpx;
}

.activeLines {
  width: 100%;
  height: 16rpx;
  border-radius: 12rpx;
  opacity: 0.8;
  transform: translateY(-50%);
}

.body {
  overflow-y: auto;
  /* overflow: hidden; */
}

.s-close-icon {
  width: 32rpx;
  height: 32rpx;
  transform: scale(.7);
}