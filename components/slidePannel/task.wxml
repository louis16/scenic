<view class="listContainer" animation="{{upScroll}}">
  <view class="titleView {{closeExpand && 'expandView'}}" capture-bind:touchstart="touchStart" capture-bind:touchend="touchEnd">
    <!-- <view wx:if="{{closeExpand}}" bindtap="changeExpand" class="expandBtn">
      <text>{{isExpand? '折叠': '展开'}}</text>
    </view> -->
    <view class="titleWrap" style="justify-content: {{titleArray.length === 0 && isLandscapeDetail?'flex-start':'space-around'}};">
      <block wx:if="{{titleArray.length>0}}">
        <view wx:for="{{titleArray}}" wx:key="index" class="{{currentIndex == index && 'activeTitle'}}" data-index="{{index}}" bindtap="changeTitle"> {{item}}
          <view wx:if="{{currentIndex == index}}" class="activeLine" />
        </view>
      </block>
      <block wx:else>
        <text style="color: #333333;">
          {{title}} <text wx:if="{{distance}}">({{distance}}m)</text>
        </text>
      </block>
    </view>
    <view bindtap="changeModalStatus" class="closeBtn">
      <image class="closeIcon" src="/static/icon/close.png" mode="" />
    </view>
  </view>
  <view class="body">
    <slot name="header"></slot>
    <slot name="body"></slot>
  </view>
</view>