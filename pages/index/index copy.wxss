.layer_control {
  width: 690rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: white;
  border-radius: 28rpx;
}

.control_item {
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item_icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 36rpx;
  /* background-color: #1c64d041; */
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.item_icon_active {
  border: 6rpx solid #90add8;
}

.item_text {
  font-family: "PingFang SC Bold";
  font-size: 28rpx;
  font-weight: normal;
  line-height: 28rpx;
  color: #333333;
}

.item_text_active {
  color: #90add8;
}

.sos_layer {
  width: 100vw;
  display: flex;
  flex-direction: column;
  /* justify-content: space-around; */
  align-items: center;
}

.sos_item {
  height: 108rpx;
  font-family: 'PingFang SC Regular';
  font-size: 32rpx;
  font-weight: normal;
  line-height: 108rpx;
  color: #333333;
}

.sos_phone_num {
  color: #90add8;
}

.empty-search-view {
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 999;
  width: 404rpx;
  height: 234rpx;
  border-radius: 28rpx;
  background: #FFFFFF;
  backdrop-filter: blur(300rpx);
  box-shadow: 0 6rpx 12rpx 0 rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transform: translate(-50%, -50%);
  font-family: 'PingFang SC Regular';
  font-size: 28rpx;
  font-weight: normal;
  line-height: 28rpx;
  text-align: center;
  color: #333333;
}

.empty-search-view image {
  width: 184rpx;
  height: 138rpx;
  margin-bottom: 14rpx;
}

@keyframes loop {
  0% {
    right: 0px;
  }

  100% {
    right: 100%;
  }
}

#myMap {
  position: relative;
  box-sizing: content-box;
}

.taskBottomFlower {
  position: relative;
  /* bottom: 0; */
  /* z-index: 999; */
  background-color: rgba(255, 0, 0, 0.116);
  width: 100vw;
  height: 376rpx;
}