.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  /* overflow: hidden; */
}

.logoView {
  display: flex;
  flex-direction: row;
  align-items: center;
  /* width: 200px; */
  width: 100%;
  transition: width 0.5s;
}

.show-input {
  padding: 16rpx 24rpx;
  width: calc(100% - 56px);
  /* transition: width 0.5s; */
  background-color: #ffffff;
  border-radius: 28rpx;
  font-family: "PingFang SC Regular";
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.18);
}

.placeholder-text {
  color: #cccccc;
}

.logo {
  border-radius: 100%;
  width: 48rpx;
  height: 48rpx;
  margin-right: 12rpx;
}

.titleWrap {
  font-family: "PingFang SC Bold";
  font-size: 34rpx;
  font-weight: 400;
  line-height: 34rpx;
  color: #ffffff;
  position: relative;
  width: 302rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.animation {
  position: relative;
  white-space: nowrap;
  animation: 5s loop linear infinite normal;
  display: inline-block;
}

.input-search-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}

.hd {
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  /* background: */
}

.hd_flex {
  flex: 1;
  font-family: 'PingFang SC Regular';
  font-weight: normal;
  text-align: center;
  font-size: 28rpx;
  font-family: 'PingFang SC';
  font-weight: 500;
  color: #333333;
}

