.resultWrap {
	width: 100vw;
	/* height: calc(80vh-300rpx); */
	height: calc(100% - 500rpx);
	background-color: #ffffff;
	position: absolute;
	z-index: 999;
	top: 0;
	display: flex;
	flex-direction: column;
	border-radius: 28rpx;
	overflow-y: scroll;
	padding-bottom: (122rpx +env(safe-area-inset-bottom));
}

.opcacity {
	opacity: 0;
}

.resultItem {
	font-family: 'PingFang SC Bold';
	font-size: 32rpx;
	font-weight: 400;
	line-height: 32rpx;
	padding: 40rpx 0;
	margin: 0 30rpx;
	color: #333333;
	border-top: 1px solid red;
}