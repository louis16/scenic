.message-wrap {
  padding: 32rpx 32rpx 332rpx 32rpx;
}

.message-clear {
  position: absolute;
  top: 70rpx;
  left: 120rpx;
  font-family: 'PingFang SC Regular';
  font-size: 20rpx;
  font-weight: normal;
  line-height: 20rpx;
  color: #999999;
}

.message-title {
  font-family: 'PingFang SC Regular';
  font-size: 28rpx;
  font-weight: normal;
  line-height: 28rpx;
  color: #666666;
  position: relative;
  display: flex;
  flex-direction: row;
}



.active-title::before {
  content: ' ';
  display: inline-block;
  width: 56rpx;
  height: 8rpx;
  background-color: #90ADD8;
  position: absolute;
  bottom: -10rpx;
  border-radius: 4rpx;
}

.message-item {
  width: 690rpx;
  /* height: 160rpx; */
  /* max-height: 260rpx; */
  border-radius: 28rpx;
  background: #F8FBFF;
  box-shadow: 0px 2px 6px 0px #D1E0F3;
  margin-top: 32rpx;
  display: flex;
  flex-direction: row;
  padding: 28rpx 16rpx;
  box-sizing: border-box;
}

.message-view {
  flex: 1;
  overflow: hidden;
}

.message-item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.red-dot {
  width: 20rpx;
  height: 20rpx;
  background-color: #FB9898;
  border-radius: 100%;
  border: 4rpx solid white;
  box-sizing: border-box;
  position: absolute;
}

.message-dot {
  top: 0;
  right: 10rpx;
}

.title-dot {
  top: -10rpx;
  right: -10rpx;
}

.item-title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.item-name {
  font-family: 'PingFang SC Bold';
  font-size: 28rpx;
  font-weight: 600;
  line-height: 40rpx;
  color: #333333
}

.item-time {
  font-family: 'DIN-Regular';
  font-size: 20rpx;
  font-weight: normal;
  line-height: 20rpx;
  color: #999999;
}

.content-wrap {
  /* width: 90%; */
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
}

.show-more {
  white-space: nowrap;
}

.toggle-icon {
  display: inline-block;
  position: absolute;
  right: 0;
}

.top-arrow {
  display: inline-block;
  margin-right: 20rpx;
  margin-left: 10rpx;
  border-top: 4rpx solid #999999;
  border-right: 4rpx solid #999999;
  border-bottom: none;
  width: 16rpx;
  height: 16rpx;
  transform: rotate(-45deg) translateY(8rpx);

  transition: transform;
}

.change-top-arrow {
  transform: rotate(135deg) translateY(8rpx);
}