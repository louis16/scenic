.swiper-dots {
  width: 10px;
  height: 10px;
}

/* 修改小圆点的颜色 */
.swiper-dots .swiper-dot {
  background-color: rgb(18, 201, 125);
}
.swiper-dots .swiper-dot-active {
  background-color: #333;
}

