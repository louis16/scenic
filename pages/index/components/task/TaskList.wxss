.taskWrap {
  height: 67vh;
  background: linear-gradient(180deg, #FFFFFF 0%, #EFF5FF 100%);
  overflow-y: auto;
  padding-bottom: 50px;
}

.flex-row {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: relative;
}

.margin26 {
  margin-top: 26rpx;
}

.topText {
  height: 64rpx;
  font-family: 'PingFang SC Regular';
  font-size: 28rpx;
  font-weight: normal;
  line-height: 64rpx;
  color: #333333;
}

.showLandscape {
  transform: translateY(64rpx);
  width: 100%;
  height: 100vh;
  position: absolute;
  background-color: white;
  z-index: 10;
  transition: height .2s;
  overflow: hidden;
  background: rgba(0, 0, 0, 0.55);
}

.hideLandscape {
  transform: translateY(64rpx);
  width: 100%;
  height: 0;
  position: absolute;
  background-color: white;
  z-index: 10;
  transition: height .2s;
  overflow: hidden;
}

.content{
  height: 860rpx;
  background-color: white;
  box-shadow: 0 12rpx 12rpx 0 rgba(0, 0, 0, 0.06);
  border-top: 2rpx solid rgba(0, 0, 0, 0.274);
  border-radius: 0 0 28rpx 28rpx;

}

.landscapeItem {
  display: block;
  margin: 0 48rpx;
  padding: 15rpx 0;
  font-family: PingFang SC Bold;
  font-size: 28rpx;
  font-weight: normal;
  line-height: 28rpx;
  letter-spacing: 0em;
  color: #333333;
}

.filterView {
  height: 56rpx;
  display: flex;
  align-items: center;
  color: #999999;
}

.headerStatus {
  height: 56rpx;
  box-sizing: border-box;
  padding: 7rpx 24rpx;
  text-align: center;
  border: 2rpx solid transparent;
  font-family: 'PingFang SC Regular';
  font-size: 28rpx;
  font-weight: normal;
  color: #999999;
}

.activeStatus {
  background-color: #E9F2FE;
  padding-left: 48rpx;
  padding-right: 48rpx;
  border-radius: 28rpx;
  font-size: 600;
  border: 2rpx solid #90ADD8;
  color: #90ADD8;

}

.itemWrap {
  margin: 40rpx 30rpx 0 30rpx;
  border-radius: 28rpx;
  padding: 0 30rpx 0 30rpx;
  background-color: #F8FBFF;
  box-shadow: 0px 0px 5px 0px #D5E1F2;
}

.nameRow {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #DAE6F6;
  padding: 30rpx;
  border-radius: 28rpx 28rpx 0 0;
  margin: 0 -30rpx;
}

.landscapeName {
  display: flex;
  align-content: center;
  font-family: 'PingFang SC Bold';
  font-size: 28rpx;
  font-weight: 600;
  line-height: 40rpx;
  color: #333333;
}

.taskContent {
  max-height: 1240rpx;
  overflow-y: scroll;
}

.showFilterView {
  width: 100%;
  height: 400rpx;
  background-color: red;
  transition: height .3s;
}

.hideFilterView {
  height: 0;
  transition: height .3s;
}

.appIcon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.filterIcon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 4rpx;
  transform: translate(0, 4rpx);
}