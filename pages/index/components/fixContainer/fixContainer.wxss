.containerWrap {
  position: absolute;
  right: 2%;
  width: 72rpx;
  border-radius: 20rpx;
  background-color: transparent;
}

.topWrap {
  width: 72rpx;
  height: 230rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.48);
  margin-bottom: 32rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.itemIcon {
  width: 56rpx;
  height: 56rpx;
  /* background-color: #66666617; */
  margin-bottom: 8rpx;
}

.itemText {
  font-family: 'PingFang SC Regular';
  font-size: 24rpx;
  font-weight: 400;
  line-height: 24rpx;
  text-align: center;
}

.bottomWrap {
  width: 72rpx;
  height: 340rpx;
  background-color: #ffffff;
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.48);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-top: 20rpx;
  padding-bottom: 12rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.progress {
  flex: 1;
  background-color: rgba(0, 128, 0, 0.205);
  margin: 0 10rpx 20rpx 10rpx;

}

.leftWrap {
  position: absolute;
  left: 2%;
  width: 72rpx;
  height: 60rpx;
  border-radius: 20rpx;
  text-align: center;
  background-color: #ffffff;
  font-family: 'DIN-Regular';
  font-size: 28rpx;
  font-weight: normal;
  line-height: 60rpx;
  color: #FB9898;
}