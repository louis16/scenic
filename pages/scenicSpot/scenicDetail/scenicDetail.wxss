.wrap {
  display: flex;
  flex-direction: column;
  height: 100vh;
  overflow: hidden;
}

.swiper {
  height: 460rpx;
}

.swiper-item {
  display: block;
  width: 100%;
  height: 460rpx;
  text-align: center;
  line-height: 460rpx;
}

.container {
  flex: 1;
  padding: 0 40rpx 100rpx 40rpx;
  margin-bottom: -40rpx;
  border-radius: 48rpx 48rpx 0 0;
  box-sizing: content-box;
  transform: translateY(-40rpx);
  backdrop-filter: blur(30px);
  overflow: scroll;
}

.logoView {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #333333;
  font-family: 'PingFang SC Heavy';
  font-weight: 700;
  letter-spacing: 2px;
  font-size: 32rpx;
  line-height: 32rpx;
  margin-top: 40rpx;
  /* background-color: red; */
}

.logo {
  border-radius: 100%;
  width: 80rpx;
  height: 80rpx;
  background-color: #90add828;
  margin-bottom: 14rpx;
}

.topLine {
  border-top: 2rpx solid #D8E3F6;
  padding-top: 46rpx;
}

.logo-view-line {
  border-top: 2rpx solid #D8E3F6;
  padding-top: 80rpx;
}
.titleView {
  margin: 46rpx 0 20rpx;
  position: relative;
  display: flex;
}

.titleIcon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 8rpx;
}

.title {
  font-family: 'PingFang SC Bold';
  font-weight: 600;
  font-size: 32rpx;
  line-height: 32rpx;
  align-self: center;
  color: #333333;
}


.descText {
  display: inline-block;
  font-family: 'PingFang SC Regular';
  font-weight: 400;
  font-size: 28rpx;
  line-height: 40rpx;
  text-indent: 44rpx;
  color: #666666;
}

.telephone {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-family: 'DIN-Medium';
  font-weight: 400;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #666666;
  text-indent: 44rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}


.addressView {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.addressIcon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.address {
  font-family: PingFang SC Regular;
  font-weight: normal;
  font-size: 28rpx;
  line-height: 40rpx;
}

.enter {
  width: 410rpx;
  height: 80rpx;
  text-align: center;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  font-family: 'PingFang SC Regular';
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  line-height: 80rpx;
  color: #ffffff;
  border-radius: 28rpx;
  margin-top: 46rpx;
  background: linear-gradient(180deg, #C5DAF8 0%, #668FCC 100%);
  box-shadow: 0px 3px 6px 0px #AFC4E3, inset 0px 4px 6px 0px #C5DDFF;
}