.eitem-content__left{
  width: 188rpx;
  height: 64rpx;
 text-align: center;
 
}
.eitem-content__left .e-left__pic{
  margin: 62rpx;
  width: 64rpx;
  height: 64rpx;
}
.eitem-content__left .e-left__pic image{
  border-radius: 64rpx;
}
.e-left__text1{
  color: #FB9898;
  padding-top: 14rpx;
}
.e-left__text1 view:nth-child(1){
  font-size: 32rpx;
}
.e-left__text1 view:nth-child(1) text{
  font-size: 88rpx;
  font-weight: bold;
}
.e-left__text1 view:nth-child(2){
  font-size: 20rpx;
}
.e-left__text2{
  padding-top: 36rpx;
  color: #70D6BF;
  font-size: 32rpx;
}
.e-left__text2 text{
  font-size: 88rpx;
  padding-right: 2rpx;
  font-weight: bold;
}
.eitem-content__intro{
  width: 380rpx;
  padding-left: 22rpx;
  position: relative;
}
.eitem-content__intro::before{
  content: "";
  width: 2rpx;
  height: 124rpx;
  position: absolute;
  left: 0rpx;
  top: 32rpx;
}
.eitem-content__intro view:nth-child(1){
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
  padding-top: 30rpx;
}
.eitem-content__intro view:nth-child(2){
  color: #999999;
  font-size: 24rpx;
  overflow: hidden;
  line-height: 28rpx;
  padding: 20rpx 0rpx 18rpx 0rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.eitem-content__intro view:nth-child(3){
  color: #999999;
  font-size: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.eitem-0 .eitem-content__intro::before{
  border-left: 2rpx dashed rgba(144, 173, 216, 0.3);
}


.eitem-1 .eitem-content__intro::before{
  border-left: 2rpx dashed rgba(251, 152, 152, 0.3);
}
.eitem-2 .eitem-content__intro::before{
  border-left: 2rpx dashed rgba(112, 214, 191, 0.3);
}

.eitem-3 .eitem-content__intro::before{
  border-left: 2rpx dashed rgba(144, 173, 216, 0.3);
}
.eitem-3 .e-left__text1,.eitem-3 .e-left__text2{
  color: #D2D2D2;
}