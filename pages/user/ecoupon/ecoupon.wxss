/* pages/user/ecoupon/ecoupon.wxss */
@import "../style/users.wxss";
.linearBg{
  min-height: 100vh;
  background: linear-gradient(180deg, #FFFFFF 0%, #EFF5FF 100%);
  
}
.topbg{
  width: 100%;
  background: linear-gradient(180deg, #E5EFFF 0%, rgba(248,251,255,0.64) 74%, rgba(255,255,255,0.00) 100%);
}
.ecoupon-main{
  width: 726rpx;
  margin-left: 12rpx;
}
.ecoupon-main__nav{
  display: flex;
  position: relative;
  padding-bottom: 14rpx;
  /* padding-top: 34rpx; */
}
.ecoupon-main__nav view{
  width: 25%;
  text-align: center;
  font-size: 28rpx;
   color: #666666;
}
.ecoupon-main__nav view text{
  display: inline-block;
  
}
.ecoupon-main__nav view.active{
  font-weight: bold;
  color: #90ADD8;
}
.ecoupon-main__nav .nav-line{
  position: absolute;
  width: 100%;
  height:8rpx ;
  width: 84rpx;
  background: #90ADD8;
  bottom: 0rpx;
  left: 58.25rpx;
  border-radius: 4rpx;
}
.ecoupon-main__list{
  padding-top: 10rpx;
}
.eitem{
  width: 726rpx;
  height: 224rpx;
  margin-top: 32rpx;
  border-radius: 24rpx;
  position: relative;
  display: flex;
}
.eitem .eitembg{
  width: 726rpx;
  height: 224rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  z-index: 1;
}
.eitem  .lefticon{
  z-index: 26;
  position: absolute;
  width: 28rpx;
  height: 28rpx;
  left: 0rpx;
  top: 40rpx;

}
.eitem-status{
  font-family: PingFang SC Regular;
  padding-left: 17rpx;
  width:24rpx ;
  height: 100%;
  color: white;
  position: relative;
  z-index: 2;
  font-size: 24rpx;
  text-align: center;
  align-items: center;
  display: flex;
  
}
.eitem-status view{ 
  display: inline-block;
  line-height: 28rpx;
}
.eitem-content{
  width: 632rpx;
  height: 188rpx;
  /* border-radius: 24rpx; */
  margin-left: 21rpx;
  margin-top: 18rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  z-index: 2;
}
