/* pages/user/components/umessage/umessage.wxss */
@import "../../style/users.wxss";
.umessagecontainer{
  position: fixed;
  z-index: 10001;
  background-color:rgba(0,0,0, 0.8);
  width: 100%;
  height: 100%;
  left: 0px;
  top: 0px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.umessage-main{
  width: 570rpx;
  /* height: 256rpx; */
  background: white;
  border-radius: 28rpx;
  position: relative;
  padding-bottom: 76rpx;
}
.umessage-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  background: rgba(255, 255, 255, 0.001);
  left: 0rpx;
  top: 0rpx;
  z-index: 2;
  transform: rotate(6deg);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(12rpx);
  box-shadow: 0px 4rpx 20rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 28rpx;
}
.umessage-img{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0rpx;
  top: 0rpx;
  z-index: 1;
}
.umessage-img-imgs{
  width: 100%;
  height: 100%;
}

.umessage-content{
  position: relative;
  z-index: 4;
}
.umessage-content-icon{
  text-align: center;
  padding-top: 48rpx;
}
.umessage-content-icon-imgs{
  width: 80rpx;
  height: 80rpx;
}
.umessage-content-text{
  width: 490rpx;
  margin-left: 40rpx;
  font-size: 28rpx;
  text-align: center;
  font-family: PingFang SC Bold;
  line-height: 40rpx;
  padding-top: 16rpx;
  color: #333333;
}
