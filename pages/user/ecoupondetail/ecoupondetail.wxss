/* pages/user/ecoupondetail/ecoupondetail.wxss */
@import "../style/users.wxss";
.ecoupondetail{
  width: 750rpx;
  height: 736rpx;
  position: relative;
}
.ecoupondetail-bg{
  width: 750rpx;
  height: 736rpx;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  z-index: -1;
}
.ecoupondetail-item{
  width: 630rpx;
  position: relative;
  margin-left: 60rpx;
  padding-top: 44rpx;
}
.ecoupondetail-item__title{
  display: flex;
  height: 184rpx;
  overflow: hidden;
}
.item-0 image{
  width: 128rpx;
  height: 128rpx;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.e-d-title text{
  display: block;
  width: 460rpx;
  padding-left: 20rpx;
 

}
.e-d-title text.title{
  font-size: 32rxp;
  font-weight: bold;
  color: #333333;
  margin-bottom: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.e-d-title text.count{
  font-family: PingFang SC Regular;
  font-size: 24rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item-1 > view,.item-2 > view{
  padding-top: 24rpx;
}
.item-1 .e-d-title,.item-2 .e-d-title{
  width: 460rpx;
  height: 150rpx;
  padding-top: 30rpx;
}
.item-1 .e-d-title text.title,.item-2 .e-d-title text.title{
  margin-bottom: 20rpx;
}
.item-1 .e-d-title text,.item-2 .e-d-title text{
  padding-left: 26rpx;
}
.item-2 .e-d-title text.title{
  line-height: 96rpx;
}

.item-1 view:nth-child(1){
  color: #FB9898;
  font-size: 32rpx;
  line-height: 96rpx;
}
.item-1 view:nth-child(1) text{
  font-size: 84rpx;
}
.item-2 view:nth-child(1){
  color: #70D6BF;
  font-size: 32rpx;
  line-height: 96rpx;
}
.item-2 view:nth-child(1) text{
  font-size: 84rpx;
}

.ecoupondetail-item__button{
  position: absolute;
  width: 96rpx;
  height: 38rpx;
  color: white;
  border-radius: 10px 2px 10px 2px;
  background: #90ADD8;
  right: 0rpx;
  top: 44rpx;
  font-size: 24rpx;
  text-align: center;
  line-height:38rpx;
}
.disitem{
  background: #aaaaaa;
}
.ecoupondetail-item::before{
  content: "";
  width: 630rpx;
  height: 2rpx;
  position: absolute;
  left: 0rpx;
  top: 224rpx;
  border-bottom: 2rpx dashed #DAE5F8;
}
.ecoupondetail-code{
  text-align: center;
 
}
.ecoupondetail-code view{
  margin-top: 46rpx;
  height: 320rpx;
  overflow: hidden;
}
.ecoupondetail-code view image{
  width: 320rpx;
  height: 320rpx;
}
.ecoupondetail-code text{
  display: inline-block;
  font-size: 36rpx;
  margin-top: 24rpx;
  line-height: 36rpx;
  font-family: Roboto;
}

.ecoupondetail-content{
  margin-top: 24rpx;
  width: 690rpx;
  padding-left: 30rpx;
}
.ecoupondetail-content > view{
  margin-top: 22rpx;
  position: relative;
  padding-left: 16rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666666;
}
.ecoupondetail-content > view::before{
  content: '';
  width: 8rpx;
  height: 8rpx;
  position: absolute;
  top:16rpx;
  left: 0rpx;
  background: #90ADD8;
  border-radius: 8rpx;
}
.ecoupondetail-content > view > text:first-child{
  color: #333333;
  font-weight: bold;
}
