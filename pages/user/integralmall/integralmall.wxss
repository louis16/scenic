  position: absolute;
  font-size: 24rpx;
  color: white;
  left: 0rpx;
  top: 3.6rpx;
  z-index: -1;
  padding-left: 48rpx;
  line-height: 32rpx;
  padding-right: 14rpx;
  border-radius: 14rpx;
