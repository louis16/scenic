  text-overflow: ellipsis;
  white-space: nowrap;
  position: relative;
}
.infolists-item .item__title::before{
  content: '';
  position: absolute;
  width: 160rpx;
  height: 2rpx;
  left: 12rpx;
  bottom: 0rpx;
  border-bottom: 1px dashed #FFEAE2;
}

.item-info{
  display: flex;
  line-height: 50rpx;
}
.item-info image{
  width: 32rpx;
  height: 32rpx;
  vertical-align:bottom;
  margin: 20rpx 0rpx 0rpx 17rpx;
}
.item-info .p{
  color: #FF6B2C;
  font-size: 32rpx;
  font-weight: bold;
  font-family: Roboto;
  width: 98rpx;
  margin: 10rpx 0rpx 0rpx 4rpx;
}
.item-info .e{
width: 40rpx;
height: 40rpx;
color: #ffffff;
font-size: 24rpx;
border-radius: 40rpx;
text-align: center;
line-height: 40rpx;
margin-top: 16rpx;
opacity: 1;
background: linear-gradient(180deg, #FFB85B 0%, #FF6B2C 100%);
}
.infolists-item .item-null__image{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left:61rpx;
  top: 32rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 12rpx;
  display: none;  
}

.item-null .item-null__image{
  display: block;
}
.item-null .item-info .p{
  color: #CCCCCC;
}
.item-null .item-info .p{
  color: #CCCCCC;
}
.item-null .item__title{
  color: #CCCCCC!important;
}
.item-null .item__title::before{
  border-bottom: 2rpx dashed #ececec;
}
.item-null .item-info image{
  -webkit-filter: grayscale(100%);
  filter: grayscale(100%);
  filter: gray;
}

.item-null .item-info .e{
  background: #CCCCCC;
  }



