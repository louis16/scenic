  height: 120rpx;
  border-radius: 12rpx;
  margin-left: 45rpx;
  margin-top: 24rpx;
}
.infolists .infolists-item .item__title{
  font-size: 28rpx;
  text-align: center;
  font-weight: bold;
  color: #333333;
  width: 180rpx;
  margin-left: 15rpx;
  padding: 14rpx 0rpx 21rpx 0rpx;
