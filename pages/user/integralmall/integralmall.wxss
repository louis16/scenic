  height: 324rpx;
  
  position: relative;
  overflow: hidden;
}
.infolists .infolists-item .item-bg{
  width: 242rpx;
  height: 324rpx;
  position: absolute;
  z-index: -1;
  left: 0rpx;
  top: 0rpx;
}
.item-content{
  width: 210rpx;
  height: 292rpx;
