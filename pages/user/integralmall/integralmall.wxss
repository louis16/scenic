@import "../style/users.wxss";
.linearBg{
  min-height: 100vh;
  position: relative;
}
.linearBg::before{
  content: '';
  width: 100%;
  height: 360rpx;
  position: absolute;
  z-index: -1;
  left: 0rpx;
  top: 0rpx;
  background: linear-gradient(360deg, rgba(255,255,255,0.00) 0%, rgba(255,107,44,0.59) 36%, #FF6B2C 99%);
}
.main{
  width: 690rpx;
  margin-left: 30rpx;
}
.userinfo{
  width: 690rpx;
  height: 250rpx;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.01);
  box-sizing: border-box;
  border: 0.5px solid #FFFFFF;
  border-radius: 30rpx;
  position: relative;
  z-index: 2;
  
  backdrop-filter: blur(6px);
  box-shadow: 0px 4px 10px 0px rgba(0, 0, 0, 0.08),inset 0px 0px 80px 0px #FFFFFF;
}

.userinfo-content{
  width: 610rpx;
  margin-left: 40rpx;
  padding-top: 40rpx;
