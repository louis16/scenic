/* pages/user/honour/honour.wxss */
@import "../style/users.wxss";
.linearBg{
  min-height: 100vh;
  background: linear-gradient(180deg, #FFFFFF 0%, #EFF5FF 100%);
  
}
.topbg{
  width: 100%;
  background: linear-gradient(180deg, #E5EFFF 0%, rgba(248,251,255,0.64) 74%, rgba(255,255,255,0.00) 100%);
}
.honourmain{
  width: 690rpx;
  margin-left: 30rpx;
}
.honournav{
  /* width: 750rpx; */
  width: 100%;
  /* overflow: hidden; */
  position: relative;
}
.honournavmain{
  width: 650rpx;
  overflow: hidden;
}
.honournav_items{
  position: absolute;
  width: 10000rpx;
  display: flex;
  position: relative;
  padding-bottom: 14rpx;
  padding-top: 50rpx;
  left: 0rpx;
  top: 0rpx;
}
.honournav_items view{
  width: 172.5rpx;
  /* width: 200rpx; */
  text-align: center;
  font-size: 28rpx;
  overflow: hidden;
  color: #333333;
}
.honournav_items view text{
  display: inline-block;
  position: relative;
  padding-bottom: 18rpx;
}
.honournav_items view text::before{
  content: "";
  position: absolute;
  width: 100%;
  height:8rpx ;
  background: linear-gradient(270deg, #FFFFFF 0%, #90ADD8 100%);
  bottom: 0rpx;
  left: 0rpx;
  display: none;
  border-radius: 4rpx;
}

.honournav_items view.active{
  color: #90ADD8;
}
.honournav_items view.active text::before{
  display: block;
}
.honournav_items .nav-line{
  content: "";
  position: absolute;
  /* width: 100%; */
  width: 172.5rpx;
  height:8rpx ;
  background: #FF6B2C;
  bottom: 0rpx;
  left: 0rpx;
  border-radius: 4rpx;
}
.honournav-main{
  padding-top: 24rpx;
}
.navmoreBut{
  position: absolute;
  width: 80rpx;
  height: 64rpx;
  right: -30rpx;
  bottom: 14rpx;
}
.navmoreBut::before{
  content: "";
  position: absolute;
  left: 0rpx;
  top: 10rpx;
  background-color: #333333;
  width: 4rpx;
  height: 44rpx;
  background: rgba(0, 0, 0, 0.15);
  filter: blur(12rpx);
}
.navmoreBut view{
  width: 33rpx;
  height: 4rpx;
  background: #333333;
  margin-left: 23rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
}
.navmoreBut view:nth-child(2),.navmoreBut view:nth-child(3){
  margin-top: 4rpx;
}
.honourlist{
  display: flex;
  flex-direction: row;
  padding-top: 22rpx;
  flex-wrap:wrap;
}
.honour-item{
  width: 25%;
  margin-bottom: 52rpx;
}
.honour-item view{
 text-align: center;
  height: 104rpx;
}
.honour-item view image{
  width: 104rpx;
  height: 104rpx; 
 }
 .honour-item text{
   
   width: 100%;
   display: inline-block;
   text-align: center;
   font-size: 24rpx;
   color: #333333;
 }

 .ranking-moretype{
  width: 750rpx;
  height: 100vh;
  overflow: hidden;
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  z-index: 999;
  background: rgba(0, 0, 0, 0.8);
}
.m-moretype__main{
width: 690rpx;

margin-top: 390rpx;
position: relative;
margin-left: 30rpx;
border-radius: 14px;
background: #FFFFFF;
}
.m-moretype__main-icon{
width: 30rpx;
height: 24rpx;
position: absolute;
z-index: -1;
right: 14rpx;
top: -18rpx;
}
.m-moretype__items{
display: flex;
flex-direction: row;
flex-wrap:wrap;
padding-top: 16rpx;
padding-bottom: 48rpx;
}
.m-moretype__items view{
width: 200rpx;
height: 72rpx;
line-height: 72rpx;
border-radius: 12rpx;
background: #F2F2F2;
margin-left: 24rpx;
margin-top: 32rpx;
text-align: center;
font-family: PingFang SC Regular;
font-size: 28rpx;
/* background: linear-gradient(180deg, #FFB85B 0%, #FF6B2C 100%); */
}
.m-moretype__items view.active{
background: linear-gradient(180deg, #FFB85B 0%, #FF6B2C 100%);
color: white;
}

.noticeBody{
  width: 750rpx;
  height: 100vh;
  position: fixed;
  z-index: 999;
  left: 0rpx;
  top: 0rpx;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}
.noticeBody::before{
  content: '';
  position: absolute;
  width: 750rpx;
  height: 100vh;
  background: rgba(0, 0, 0, 0.9);
  left: 0rpx;
  z-index: -2;
  top: 0rpx;
}

.noticeBody-bg{
  width: 750rpx;
  height: 100vh;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  z-index: 0;

}
.noticeBody-bg image{
  width: 110%;
  margin-left: -5%;
  margin-top:0rpx;
}
.noticeBody-success{
  width: 476rpx;
  /* height: 256rpx; */
  position: relative;
  padding-bottom: 76rpx;
  text-align: center;
  position: relative;
  z-index: 10;
  
}
.noticeBody-success .s-title image{
  width: 300rpx;
  height: 44rpx;
}
.noticeBody-success .s-content{
  width: 472rpx;
  position: relative;
  margin-top: 56rpx;
}






.s-content__honour image{
  width: 260rpx;
  height: 260rpx;
}


.s-content__text{
font-family: PingFang SC Heavy;
font-size: 36rpx;
font-weight: normal;
line-height: 18px;
text-align: center;
color: #FFD794;
}
.noticeBody-showtext1{
  text-align: center;
  color: #FFD794;
  font-size: 28rpx;
  margin-top: 92rpx;
  position: relative;
}
.noticeBody-showtext1::before,.noticeBody-showtext1::after{
  content: '';
  position: absolute;
  width: 80rpx;
  height: 2rpx;
  background: linear-gradient(270deg, rgba(255,215,148,0.00) 0%, #FFD794 31%, rgba(255,215,148,0.52) 64%, rgba(255,215,148,0.00) 100%);
  top: 20rpx;
}
.noticeBody-showtext1::before{
  left: 80rpx;
}
.noticeBody-showtext1::after{
  right: 80rpx;
  transform:rotate(180deg);
}
.awardList{
  display: flex;
  margin-top: 46rpx;
}
.awardList > view text{
  font-family: PingFang SC Regular;
  color: #FFD794;
  font-size: 24rpx;
  text-align: center;

}
.awardList > view{
  width: 120rpx;
  margin-left: 80rpx;
}
.awardList > view > view{
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.awardList view image{
  width: 84rpx;
}

.noticeBody-but{
  margin-top: 80rpx;
  text-align: center;
}
.noticeBody-but view{
  display: inline-block;
  width: 300rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  border-radius: 40rpx;
  color: #FFFFFF;
  background: rgba(255, 255, 255, 0.2);
  box-sizing: border-box;
  border: 1px solid rgba(255, 255, 255, 0.6);
  font-size: 32rpx;
}