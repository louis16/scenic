.wrap {
  display: flex;
  flex-direction: column;
  /* height: 100vh; */
}

.swiper {
  height: 460rpx;
}

.swiper-item {
  display: block;
  width: 100%;
  height: 460rpx;
  text-align: center;
  line-height: 460rpx;
  /* background-color: #90ADD8; */
}

.container {
  /* display: flex; */
  /* flex-direction: column; */
  padding: 60rpx 40rpx 100rpx 40rpx;
  margin-bottom: -40rpx;
  /* border-top: 2rpx solid white; */
  border-radius: 48rpx 48rpx 0 0;
  box-sizing: content-box;
  transform: translateY(-40rpx);
  backdrop-filter: blur(30px);
  /* background-color: white; */
}

.logoView {
  height: 80rpx;
  display: flex;
  align-items: center;
  font-family: 'PingFang SC Bold';
  font-weight: 400;
  font-size: 32rpx;
  line-height: 32rpx;
}

.logo {
  border-radius: 100%;
  width: 80rpx;
  height: 80rpx;
  background-color: #90add828;
  margin-right: 8rpx;
}

.topLine {
  /* width: 100%; */
  border-top: 2rpx solid #D8E3F6;
  padding-top: 32rpx;
  /*padding-top: 46rpx;
  margin-top: 46rpx; */
}

.titleView {
  margin: 46rpx 0 30rpx;
  position: relative;
  display: flex;
}

.titleIcon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 8rpx;
}

.title {
  font-family: 'PingFang SC Bold';
  font-weight: 600;
  font-size: 32rpx;
  line-height: 32rpx;
  align-self: center;
  color: #333333;
}


.descText {
  display: inline-block;
  font-family: 'PingFang SC Regular';
  font-weight: 400;
  font-size: 28rpx;
  line-height: 40rpx;
  text-indent: 44rpx;
}

.telephone {
  display: inline-block;
  font-family: 'DIN-Medium';
  font-weight: 400;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #333333;
  text-indent: 44rpx;
}


.addressView {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.addressIcon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.address {
  font-family: PingFang SC Regular;
  font-weight: normal;
  font-size: 28rpx;
  line-height: 40rpx;
}

.enter {
  width: 410rpx;
  height: 80rpx;
  text-align: center;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  font-family: 'PingFang SC Regular';
  font-size: 32rpx;
  font-weight: normal;
  line-height: 80rpx;
  color: #ffffff;
  border-radius: 28rpx;
  margin-top: 72rpx;
  background: linear-gradient(180deg, #C5DAF8 0%, #668FCC 100%);
  box-shadow: 0px 3px 6px 0px #AFC4E3, inset 0px 4px 6px 0px #C5DDFF;

}