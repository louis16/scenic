.wrap {
  width: 300px;
  height: 470px;
  background-color: whitesmoke;
  position: relative;
  left: 10%;
  transform: translateY(200px);
  overflow: hidden;
}

.wrap::before {
  content: " ";
  display: inline-block;
  position: absolute;
  transform: translateY(-50%);
  width: 100%;
  height: 200px;
  border-radius: 50%;
  backdrop-filter: blur(34px);
  box-shadow: 0px 0px 16px 0px rgba(235, 91, 91, 0.356);
  /* backdrop-filter: blur(5px); */
  background-color: transparent;
  /* box-shadow: rgba(0, 0, 0, 0.3) 2px 8px 8px; */
}

.wrap::after {
  content: " ";
  display: inline-block;
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 20px;
  background: #D8D8D8;
  backdrop-filter: blur(34px);
  box-shadow: 0px 0px 16px 0px rgba(0, 0, 0, 0.1);
}