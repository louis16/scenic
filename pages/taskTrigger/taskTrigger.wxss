@import "/pages/commonTemplate/templateComp.wxss";

.pageWrap {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow-y: scroll;
  overflow-x: hidden;
  background-color: white;
}

.contentWrap {
  display: flex;
  /* height: 100vh; */
  flex-direction: column;
}

.audioWrap {
  margin: 0 30rpx 0 30rpx;
  border-radius: 48rpx;
  padding: 30rpx;
  background-color: white;
  backdrop-filter: blur(24px);
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.08);
  /* transform: translateY(30rpx); */
}

.audio_bg {
  position: absolute;
  width: 100%;
  height: 100%;
}

.audioRow {
  display: flex;
  justify-content: space-between;
  font-family: Roboto;
  font-size: 24rpx;
  font-weight: normal;
  line-height: 24rpx;
  color: #333333;
  align-items: center;
}

.descWrap {
  margin: 40rpx 30rpx 0 30rpx;
  border-radius: 48rpx;
  padding: 40rpx 30rpx;
  background: #FFFFFF;
  backdrop-filter: blur(24px);
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.08);
  font-family: 'PingFang SC Regular';
  font-size: 28rpx;
  /* font-weight: normal; */
  line-height: 40rpx;
}

.playIcon {
  width: 56rpx;
  height: 56rpx;
}

.img {
  width: 100vw;
  height: 460rpx;
}

.content {
  flex: 1;
  background-color: white;
  padding: 40rpx 30rpx;
  transform: translateY(-40rpx);
  border-radius: 48rpx 48rpx 0 0;
}

.title {
  font-family: 'PingFang SC Bold';
  font-size: 28rpx;
  font-weight: 600;
  line-height: 28rpx;
  color: #333333;
  margin-bottom: 40rpx;
}

.title::before {
  display: inline-block;
  content: " ";
  width: 8rpx;
  height: 28rpx;
  transform: translate(0rpx, 6rpx);
  margin-right: 8rpx;
  background-color: #90ADD8;
}

.desc {
  font-family: 'PingFang SC Regular';
  font-size: 28rpx;
  font-weight: normal;
  line-height: 40rpx;
  color: rgb(102, 102, 102);
}

.longDesc {
  height: 100rpx;
  overflow: auto;
}

.question {
  font-family: 'PingFang SC Bold';
  font-size: 32rpx;
  font-weight: 600;
  line-height: 32rpx;
  margin-bottom: 54rpx;
  margin-top: 100rpx;
}



.mask {
  width: 100vw;
  height: 100%;
  background-color: #000000e0;
  position: fixed;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ResultWrap {
  width: 570rpx;
  height: 492rpx;
  box-shadow: 0px 0px 16px 0px rgba(0, 0, 0, 0.1);
  border-radius: 32rpx;
  background: #D8D8D8;
}

.blur {
  position: absolute;
  background: rgba(255, 255, 255, 0.01);
  transform: rotate(6deg);
  backdrop-filter: blur(6px);
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.12);
}

.notRightWrap {
  transform: rotate(-6deg);
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.backImg {
  width: 434rpx;
  height: 440rpx;
  animation: changeright 30s linear infinite;
  -webkit-animation: changeright 30s linear infinite;
}

.goodIcon {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -60%);
  width: 120rpx;
  height: 120rpx;
  background-color: white;
  border-radius: 50%;
}

.closeBtn {
  width: 64rpx;
  height: 64rpx;
  margin-top: 40rpx;
}

.notRightIcon {
  width: 80rpx;
  height: 80rpx;
  margin: 54rpx 0 40rpx 0;
}

.reAnswer {
  padding: 24rpx 64rpx;
  font-family: 'PingFang SC Regular';
  font-size: 32rpx;
  /* font-weight: normal; */
  color: #FFFFFF;
  line-height: 32rpx;
  background-color: #90ADD8;
  border-radius: 28rpx;
  margin-top: 64rpx;
}

.goodContent {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.rewardText {
  display: inline;
  background: linear-gradient(180deg, #FBF388 5%, #FFFBD8 49%, #F8A955 99%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-family: 'PingFang SC Regular';
  font-weight: 500;
  font-size: 40rpx;
}

/*自定义动画类----顺时针旋转（使用这个动画的时候才设置动画执行时间）*/
@keyframes changeright {
  0% {
    -webkit-transform: rotate(0deg);
  }

  50% {
    -webkit-transform: rotate(180deg);
  }

  100% {
    -webkit-transform: rotate(360deg);
  }
}

@-webkit-keyframes changeright {
  0% {
    -webkit-transform: rotate(0deg);
  }

  50% {
    -webkit-transform: rotate(180deg);
  }

  100% {
    -webkit-transform: rotate(360deg);
  }
}