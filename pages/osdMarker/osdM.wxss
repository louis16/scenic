@import "/pages/commonTemplate/templateComp.wxss";


.mask {
  width: 100vw;
  height: 100%;
  background-color: #000000e0;
  position: fixed;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.ResultWrap {
  width: 570rpx;
  height: 492rpx;
  box-shadow: 0px 0px 16px 0px rgba(0, 0, 0, 0.1);
  border-radius: 32rpx;
  background: #D8D8D8;
}

.blur {
  position: absolute;
  background: rgba(255, 255, 255, 0.01);
  transform: rotate(6deg);
  backdrop-filter: blur(6px);
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.12);
}

.notRightWrap {
  transform: rotate(-6deg);
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.notRightIcon {
  width: 80rpx;
  height: 80rpx;
  margin: 54rpx 0 40rpx 0;
}

.reAnswer {
  padding: 24rpx 64rpx;
  font-family: 'PingFang SC Regular';
  font-size: 32rpx;
  /* font-weight: normal; */
  color: #FFFFFF;
  line-height: 32rpx;
  background-color: #90ADD8;
  border-radius: 28rpx;
  margin-top: 64rpx;
}

.contentWrap>view {
  width: 80%;
  margin-top: 8vh;
  margin-bottom: 1vh;
}