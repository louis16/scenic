.choose_wrap {
  background-color: #F8FBFF;
  box-shadow: 0 0 20rpx 0 #D6E3F3;
  display: flex;
  align-self: center;
  margin-top: 120rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 28rpx;
  position: relative;
  padding-bottom: 48rpx;
  padding-top: 100rpx;
}

.question_icon_temp {
  width: 126rpx;
  height: 126rpx;
  position: absolute;
  top: 0;
  transform: translateY(-30%);
}

.question_temp {
  font-family: 'PingFang SC Bold';
  font-size: 32rpx;
  font-weight: 600;
  line-height: 32rpx;
  margin-bottom: 54rpx;
}

.flex_row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.input_item {
  width: 65rpx;
  height: 65rpx;
  border: 1rpx solid #90ADD8;
  margin-left: 4rpx;
  text-align: center;
  line-height: 65rpx;
}

.input_code {
  width: 100%;
  background-color: rgba(255, 0, 0, 0.267);
  font-size: 28rpx;
  color: #90ADD8;
  position: absolute;
  /* left: 35rpx; */
  /* letter-spacing: 60rpx; */
}

.input_text {
  position: absolute;
  height: 65rpx;
  opacity: 0;
  color: transparent;
}

.hide_input_text {
  opacity: 0;
  position: fixed;
  bottom: 0;
  color: transparent;
}

.radioItem_temp {
  width: 80%;
  height: 80rpx;
  background-color: white;
  display: flex;
  align-items: center;
  border-radius: 20rpx;
  border: 2rpx solid #D6E3F3;
  box-shadow: 0px 0px 4px 0px #D6E3F3;
  margin-top: 16rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
}

.choose_text_temp {
  flex: 1;
  text-align: center;
}

.input_wrap_temp {
  margin-top: 10rpx;
  background-color: #D6E3F3;
}

.submit_temp {
  text-align: center;
  line-height: 32rpx;
  font-family: 'PingFang SC Bold';
  font-size: 32rpx;
  padding: 24rpx 96rpx;
  background: #90ADD8;
  color: #FFFFFF;
  margin-top: 80rpx;
  border-radius: 28rpx;
}

.mask_temp {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #00000070;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.v_c_container {
  width: 670rpx;
  height: 720rpx;
  border-radius: 28rpx;
  position: absolute;
  background-color: white;
}

.v_c_container_bg {
  width: 100%;
  height: 100%;
}

.blur_temp {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  background: rgba(255, 255, 255, 0.01);
  box-sizing: border-box;
  border: 0.5px solid rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(6px);
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.12);
  position: relative;
  transform: translate(-24rpx, -24rpx);
}
.v_c_close{
  width: 22rpx;
  height: 22rpx;
  position: absolute;
  top: 8%;
  right: 4%;
}

.replay_temp {
  position: absolute;
  bottom: 28rpx;
  color: #666666;
}

.good_contents {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.good_header_icon {
  height: 90rpx;
  margin-bottom: 80rpx;
}

.detail_text {
  color: #FFF49B;
}

.detail_text::after {
  content: ' ';
  display: inline-block;
  width: 40px;
  height: 2px;
  opacity: 1;
  transform: translate(10rpx, -10rpx);
  background: linear-gradient(270deg, rgba(255, 215, 148, 0.00) 0%, rgba(255, 215, 148, 0.52) 34%, rgba(255, 215, 148, 0.52) 64%, rgba(255, 215, 148, 0.00) 100%);
}

.detail_text::before {
  content: ' ';
  display: inline-block;
  width: 40px;
  height: 2px;
  transform: translate(-10rpx, -10rpx);
  background: linear-gradient(270deg, rgba(255, 215, 148, 0.00) 0%, rgba(255, 215, 148, 0.52) 34%, rgba(255, 215, 148, 0.52) 64%, rgba(255, 215, 148, 0.00) 100%);
}

.reward_item {
  margin-top: 56rpx;
  color: #FFD794;
  text-align: center;
}

.img_back {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.15);
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.item_icon {
  width: 70%;
  height: 70%;
  border-radius: 8rpx;
}


.reward_wrap {
  display: flex;
  width: 90%;
  flex-direction: row;
  justify-content: space-evenly;
  margin-bottom: 80rpx;
}

.close_btn {
  width: 64rpx;
  height: 64rpx;
  margin-top: 40rpx;
}